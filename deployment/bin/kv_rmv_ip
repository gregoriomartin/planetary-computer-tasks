#!/bin/bash

set -e

source bin/lib

if [[ "${CI}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Remove runner public IP from Key Vault firewall allow list
"
}

while [[ "$#" -gt 0 ]]; do case $1 in
    *)
        usage "Unknown parameter passed: $1"
        shift
        shift
        ;;
    esac done


if [ "${BASH_SOURCE[0]}" = "${0}" ]; then

    kv_token=$(get_kv_func_token)

    uri="https://func-pc-keyvault-auth.azurewebsites.net/api/RemoveIpException?guid=${guid_deploy_secrets}&pipeline=github-pc-tasks&resourceGroup=${DEPLOY_SECRETS_KV_RG_NAME}&keyVault=${DEPLOY_SECRETS_KV}"

    echo $(curl --header "Authentication: Bearer $kv_token" -s $uri)

    uri="https://func-pc-keyvault-auth.azurewebsites.net/api/RemoveIpException?guid=${guid_pctasks_kv}&pipeline=github-pc-tasks&resourceGroup=${PCTASKS_TASK_KV_RESOURCE_GROUP_NAME}&keyVault=${PCTASKS_TASK_KV}"

    echo $(curl --header "Authentication: Bearer $kv_token" -s $uri)

fi